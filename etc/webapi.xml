<?xml version="1.0"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/voucherify/apply/cart/:cartId/" method="PUT">
        <service class="QS\Voucherify\Api\VoucherManagementInterface" method="set"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/voucherify/get/cart/:cartId/" method="GET">
        <service class="QS\Voucherify\Api\VoucherManagementInterface" method="get"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/voucherify/delete/cart/:cartId/" method="DELETE">
        <service class="QS\Voucherify\Api\VoucherManagementInterface" method="remove"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>